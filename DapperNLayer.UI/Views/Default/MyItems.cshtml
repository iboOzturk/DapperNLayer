@using EntityLayer.Concrete

@{
    ViewData["Title"] = "MyItems";
    Layout = "~/Views/Shared/_DefultLayout.cshtml";
}


@model List<Item>
@*
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" /> *@
<!DOCTYPE html>

<html>

<body>
    @if (Model != null && Model.Any())
    {
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">İtemler</h4>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> İtem Adı </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        @item.ItemId
                                    </td>
                                    <td> @item.Name </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>No items found.</p>
    }
</body>

</html>


