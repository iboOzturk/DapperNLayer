@using EntityLayer.Concrete
@model Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_DefultLayout.cshtml";
}

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h1>Ürün Ekle</h1>
                <form method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <label>Ürün Adı</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <br />

                    <label>Açıklama</label>
                    <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                    <input type="hidden" asp-for="CreateDate" class="form-control" />
                    <label>Kategori</label>
                    <select id="CategoryId" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))" class="form-control">
                        <option value="">-- Kategori Seçin --</option>
                    </select>

                    <br />
                    <button class="btn btn-success">Ekle</button>
                </form>

            </div>
        </div>
    </div>
</div>


